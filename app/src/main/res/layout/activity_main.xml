<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="#c0c0c0c0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_background_two"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableStart="@drawable/ic_activity_main_back"
                android:focusable="true" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/myhousemoney"
                android:textAlignment="center"
                android:textColor="#FFFEFE"
                android:textSize="19sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/more"
                android:id="@+id/tv_more"
                android:clickable="true"
                android:textColor="#FFFEFE"
                android:textSize="36sp"
                android:focusable="true" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_background_three">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/_16680"
                android:textColor="#FFF"
                android:textSize="36sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="65dp"
                android:text="@string/housemoneydetail"
                android:textColor="#FFF"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/im_detail"
                android:clickable="true"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="69dp"
                android:src="@drawable/ic_activity_main_detail"
                android:focusable="true" />
            <View
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginStart="295dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/tv_border"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="305dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="70dp"
                android:paddingStart="15dp"
                android:text="@string/market"
                android:id="@+id/tv_shopping"
                android:clickable="true"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:focusable="true" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="305dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="72dp"
                android:src="@drawable/ic_activity_main_shoppingcar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
            android:layout_marginTop="-50dp"
            android:background="@drawable/shape_background_one"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_myTask"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="66dp"
                android:paddingTop="27dp"
                android:text="@string/mytask"
                android:textColor="#00A0E9"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:focusable="true" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="35dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="-13dp"
                android:background="#c0c0c0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="@string/paihang"
                android:id="@+id/tv_paihang"
                android:clickable="true"
                android:textColor="#c0c0c0"
                android:textSize="17sp"
                android:textStyle="bold"
                android:focusable="true" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="4dp"
                android:layout_marginStart="-190dp"
                android:layout_marginTop="25dp"
                android:background="#00A0E9" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:background="#FFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    </RelativeLayout>

